{
    "configurations": [
        {
            "name": "smallweb server",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/main.go",
            "env": {
                "SMALLWEB_HOST": "localhost:8000"
            },
            "args": [
                "server"
            ],
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "smallweb tunnel (remote proxy)",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "tunnel"
            ]
        },
        {
            "name": "smallweb tunnel (local proxy)",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/main.go",
            "env": {
                "SMALLWEB_HOST": "localhost",
                "SMALLWEB_SSH_PORT": "2222"
            },
            "args": [
                "tunnel"
            ]
        },
        {
            "name": "smallweb auth signup",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "auth",
                "signup"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "smallweb auth login",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "auth",
                "login"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "smallweb auth logout",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "auth",
                "logout"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "smallweb serve",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "serve",
                "websockets"
            ]
        },
        {
            "name": "smallweb list",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "list"
            ]
        }
    ]
}
