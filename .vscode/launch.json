{
    "configurations": [
        {
            "name": "smallweb serve",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "serve"
            ]
        },
        {
            "name": "smallweb proxy",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "proxy"
            ],
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "smallweb up (remote proxy)",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "up"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "smallweb up (local proxy)",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/main.go",
            "env": {
                "SMALLWEB_HOST": "localhost"
            },
            "args": [
                "up"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "smallweb auth signup",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/main.go",
            // "env": {
            //     "SMALLWEB_HOST": "localhost"
            // },
            "args": [
                "auth",
                "signup"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "smallweb auth login",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "auth",
                "login"
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "smallweb auth logout",
            "type": "go",
            "request": "launch",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "auth",
                "logout"
            ],
            "console": "integratedTerminal"
        }
    ]
}
